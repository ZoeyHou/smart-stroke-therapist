<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.gaitanalysis.PersonalSetting" >

    <RadioGroup
        android:id="@+id/radioGroup1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView1"
        android:layout_marginLeft="30dp"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/radio0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="是" />

        <RadioButton
            android:id="@+id/radio1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/textView1"
            android:layout_below="@+id/textView1"
            android:text="否" />
    </RadioGroup>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="15dp"
        android:text="是否启动训练提醒"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView1"
        android:layout_below="@+id/radioGroup1"
        android:layout_marginTop="14dp"
        android:text="设置提醒时间"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/radioGroup1"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="22dp"
        android:text="每天"
        android:textSize="15dp" />

    <EditText
        android:id="@+id/accountInput"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/textView2"
        android:layout_alignTop="@+id/textView3"
        android:background="@drawable/text_rectan_border"
        android:ems="20"
        android:singleLine="true" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/textView1"
        android:layout_alignTop="@+id/accountInput"
        android:text="时"
        android:textSize="15dp" />

    <EditText
        android:id="@+id/EditText01"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView4"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/textView4"
        android:background="@drawable/text_rectan_border"
        android:ems="20"
        android:singleLine="true" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/EditText01"
        android:layout_alignBottom="@+id/EditText01"
        android:layout_marginLeft="18dp"
        android:layout_toRightOf="@+id/EditText01"
        android:text="分"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/textView3"
        android:layout_below="@+id/accountInput"
        android:layout_marginTop="18dp"
        android:text="至"
        android:textSize="15dp" />

    <EditText
        android:id="@+id/EditText03"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/accountInput"
        android:layout_alignTop="@+id/textView6"
        android:background="@drawable/text_rectan_border"
        android:ems="20"
        android:singleLine="true" />

    <TextView
        android:id="@+id/TextView01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/EditText03"
        android:layout_toLeftOf="@+id/EditText01"
        android:text="时"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/TextView02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/EditText03"
        android:layout_alignLeft="@+id/textView5"
        android:text="分"
        android:textSize="15dp" />

    <EditText
        android:id="@+id/EditText02"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/EditText01"
        android:layout_alignTop="@+id/TextView02"
        android:background="@drawable/text_rectan_border"
        android:ems="20"
        android:singleLine="true" />

    <TextView
        android:id="@+id/TextView03"
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:layout_alignLeft="@+id/textView2"
        android:layout_below="@+id/EditText02"
        android:layout_marginTop="15dp"
        android:background="@drawable/text_border"
        android:text="    医生安排的训练时间：" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TextView03"
        android:layout_marginTop="17dp"
        android:layout_toLeftOf="@+id/TextView01"
        android:text="设置总结频率："
        android:textSize="15dp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_alignBaseline="@+id/button1"
        android:layout_alignBottom="@+id/button1"
        android:layout_alignLeft="@+id/EditText02"
        android:background="@drawable/button_border"
        android:text="返回" />

    <RadioGroup
        android:id="@+id/radioGroup2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView7"
        android:layout_below="@+id/textView7"
        android:orientation="vertical" >

        <RadioButton
            android:id="@+id/radio02"
            android:layout_width="194dp"
            android:layout_height="wrap_content"
            android:text="每月最后一日总结" />

        <RadioButton
            android:id="@+id/radio01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/button1"
            android:layout_below="@+id/textView7"
            android:checked="true"
            android:text="每周日总结" />
    </RadioGroup>

    <Button
        android:id="@+id/button1"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_below="@+id/radioGroup2"
        android:layout_marginTop="17dp"
        android:layout_toLeftOf="@+id/TextView01"
        android:background="@drawable/button_border"
        android:text="保存" />

</RelativeLayout>