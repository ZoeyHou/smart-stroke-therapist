<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.gaitanalysis.Logging" >

    <Button
        android:id="@+id/button1"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_above="@+id/button2"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="17dp"
        android:background="@drawable/button_border"
        android:text="登录" />

    <Button
        android:id="@+id/button2"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/button1"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="66dp"
        android:background="@drawable/button_border"
        android:text="注册" />

    <TextView
        android:id="@+id/pwdView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button1"
        android:layout_marginBottom="98dp"
        android:layout_marginRight="37dp"
        android:layout_toLeftOf="@+id/accountInput"
        android:text="密码"
        android:textSize="@dimen/abc_action_bar_title_text_size" />

    <EditText
        android:id="@+id/accountInput"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/pwdView"
        android:layout_alignLeft="@+id/button1"
        android:layout_marginBottom="24dp"
        android:background="@drawable/text_rectan_border"
        android:ems="20"
        android:hint="请输入账号"
        android:singleLine="true" />

    <TextView
        android:id="@+id/accountView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/accountInput"
        android:layout_alignBottom="@+id/accountInput"
        android:layout_alignLeft="@+id/pwdView"
        android:text="账号"
        android:textSize="@dimen/abc_action_bar_title_text_size" />

    <EditText
        android:id="@+id/pwdInput"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/pwdView"
        android:layout_alignBottom="@+id/pwdView"
        android:layout_toRightOf="@+id/pwdView"
        android:background="@drawable/text_rectan_border"
        android:ems="20"
        android:hint="请输入密码"
        android:singleLine="true" >

        <requestFocus />
    </EditText>

</RelativeLayout>