<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.gaitanalysis.PatInfoMod2" >

    <TextView
        android:id="@+id/textName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="50dp"
        android:text="姓名："
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="18dp" />

    <RadioGroup
        android:id="@+id/radioGroup1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textGender"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/radio0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:checked="true"
            android:text="男" />

        <RadioButton
            android:id="@+id/radio1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="女" />

    </RadioGroup>

    <Button
        android:id="@+id/button"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/radioGroup1"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="71dp"
        android:background="@drawable/button_border"
        android:text="提交" />

    <TextView
        android:id="@+id/textAge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textName"
        android:layout_below="@+id/textName"
        android:layout_marginTop="26dp"
        android:text="年龄："
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/textGender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textAge"
        android:layout_below="@+id/textAge"
        android:layout_marginTop="20dp"
        android:text="性别："
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/textLegLen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textGender"
        android:layout_below="@+id/textHeight"
        android:layout_marginTop="17dp"
        android:text="腿长："
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/textHeight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textLegLen"
        android:layout_below="@+id/textWeight"
        android:layout_marginTop="26dp"
        android:text="身高："
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/textWeight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textHeight"
        android:layout_below="@+id/radioGroup1"
        android:layout_marginTop="16dp"
        android:text="体重："
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/editName"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textAge"
        android:layout_alignLeft="@+id/radioGroup1"
        android:background="@drawable/text_rectan_border"
        android:ems="10" />

    <EditText
        android:id="@+id/editAge"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textGender"
        android:layout_alignLeft="@+id/radioGroup1"
        android:background="@drawable/text_rectan_border"
        android:ems="10" />

    <EditText
        android:id="@+id/editWeight"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textHeight"
        android:layout_alignLeft="@+id/radioGroup1"
        android:background="@drawable/text_rectan_border"
        android:ems="10" />

    <EditText
        android:id="@+id/editHeight"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textLegLen"
        android:layout_alignLeft="@+id/editWeight"
        android:background="@drawable/text_rectan_border"
        android:ems="10" />

    <EditText
        android:id="@+id/editLegLen"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textLegLen"
        android:layout_alignBottom="@+id/textLegLen"
        android:layout_alignLeft="@+id/button"
        android:background="@drawable/text_rectan_border"
        android:ems="10" />

</RelativeLayout>